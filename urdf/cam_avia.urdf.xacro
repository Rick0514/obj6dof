    <!-- avia and its parameters-->
    <xacro:include filename="$(find obj6dof)/urdf/avia.xacro"/>
	<!-- <xacro:Livox_AVIA name="avia" parent="hik/camera" pctype="1"> -->
	<xacro:Livox_AVIA name="avia" parent="base_link" pctype="1">
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
	</xacro:Livox_AVIA>

    <!-- camera and its parameters-->
	<xacro:include filename="$(find obj6dof)/urdf/CameraSensor.xacro"/>
	<xacro:Macro_CameraROS name="hik" parent="avia" image_topic="image" fov="${M_PI*73.6/180}" hz="1" width="1536" height="1024">
		<origin xyz="-0.288638  -0.0275334  0.146255" rpy="-1.54897219  0.01713104 -0.01158016" />
