<launch>

    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="1.0"/>
    <arg name="Y" default="0"/>
    <arg name="use_rviz" default="true"/>
    <!-- avia or mid360 -->
    <arg name="dev" default="avia" />
    <!-- <arg name="world_name" value="trees" /> -->
    <arg name="world_name" value="calib-2" />
    <!-- <arg name="world_name" value="city.world" /> -->

    <env name="GAZEBO_MODEL_PATH" value="$(find obj6dof)/worlds/models"/>
    <env name="GAZEBO_PLUGIN_PATH" value="$(find obj6dof)/worlds"/>
    
    <param name="robot_description" command="$(find xacro)/xacro '$(find obj6dof)/urdf/cam_$(arg dev).urdf.xacro' init_x:=$(arg x) init_y:=$(arg y) init_z:=$(arg z)" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="50.0" />
    </node>

    <node pkg="gazebo_ros" type="spawn_model" name="model" args="-urdf -model robot -param robot_description -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg Y)" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find obj6dof)/worlds/$(arg world_name)" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true" />
        <arg name="headless" value="false" />
        <arg name="debug" value="false" />
        <arg name="verbose" value="true" />
    </include>

    <!-- <node name="keypad" pkg="obj6dof" type="teleop.py" launch-prefix="gnome-terminal -x" /> -->

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find obj6dof)/rviz/vis_$(arg dev).rviz" if="$(arg use_rviz)" />

</launch>