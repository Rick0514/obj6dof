<launch>
    <arg name="image_view" default="false" />
    <arg name="suffix" default="front" />
    <arg name="dev" default="/dev/video0"/>
    <arg name="w" default="640"/>
    <arg name="h" default="480"/>
    <arg name="r" default="20"/>

    <node name="$(arg suffix)_usb_cam" pkg="usb_cam" type="$(arg suffix)_usb_cam_node" output="screen" >
        <rosparam command="load" file="./usb_cam.yml"/>
        <param name="video_device" value="$(arg dev)"/>
        <param name="image_width" value="$(arg w)" />
        <param name="image_height" value="$(arg h)" />
        <param name="framerate" value="$(arg r)"/>
    </node>

    <node if="$(arg image_view)" name="image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
        <remap from="image" to="/usb_cam/image_raw"/>
        <param name="autosize" value="true" />
    </node>

</launch>